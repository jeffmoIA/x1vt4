# Este archivo contiene variables de entorno de ejemplo
# Crea un archivo .env basado en este y completa los valores reales

# Configuración Django
DJANGO_SETTINGS_MODULE=core.settings.dev  # Cambia a core.settings.prod en producción
DJANGO_SECRET_KEY=genera-una-clave-secreta-aqui
DJANGO_ALLOWED_HOSTS=localhost,ejemplo.com,www.ejemplo.com

# Base de datos
DB_NAME=mototienda
DB_USER=tu_usuario_db
DB_PASSWORD=tu_contraseña_db
DB_HOST=localhost
DB_PORT=5432

# Email
EMAIL_HOST=smtp.ejemplo.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu@email.com
EMAIL_HOST_PASSWORD=tu_password
DEFAULT_FROM_EMAIL=noreply@ejemplo.com

# Redis (caché)
REDIS_URL=redis://127.0.0.1:6379/1

# AWS S3 (almacenamiento de archivos)
USE_S3=False
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_STORAGE_BUCKET_NAME=tu-bucket-nombre